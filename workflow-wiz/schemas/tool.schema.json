{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tool Definition",
  "description": "Schema for tool/integration definitions",
  "type": "object",
  "required": ["tool_name", "tool_type", "actions"],
  "properties": {
    "tool_name": {
      "type": "string",
      "description": "Name of the tool",
      "enum": ["gmail", "sheets", "notion", "webhook"]
    },
    "tool_type": {
      "type": "string",
      "description": "Category of the tool",
      "enum": ["email", "spreadsheet", "database", "api"]
    },
    "description": {
      "type": "string",
      "description": "What this tool does"
    },
    "authentication": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["oauth2", "api_key", "basic", "none"]
        },
        "required": {
          "type": "boolean",
          "default": true
        },
        "env_vars": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Required environment variables"
        }
      }
    },
    "actions": {
      "type": "array",
      "description": "Available actions for this tool",
      "items": {
        "$ref": "#/definitions/action"
      }
    },
    "rate_limits": {
      "type": "object",
      "properties": {
        "requests_per_minute": {
          "type": "integer"
        },
        "requests_per_day": {
          "type": "integer"
        }
      }
    }
  },
  "definitions": {
    "action": {
      "type": "object",
      "required": ["name", "description"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Action identifier"
        },
        "description": {
          "type": "string",
          "description": "What this action does"
        },
        "parameters": {
          "type": "object",
          "description": "Configuration parameters for this action",
          "additionalProperties": {
            "$ref": "#/definitions/parameter"
          }
        },
        "returns": {
          "type": "object",
          "description": "What data this action returns"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "config": {
                "type": "object"
              }
            }
          }
        }
      }
    },
    "parameter": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "boolean", "array", "object"]
        },
        "required": {
          "type": "boolean",
          "default": false
        },
        "description": {
          "type": "string"
        },
        "default": {
          "description": "Default value for this parameter"
        },
        "enum": {
          "type": "array",
          "description": "Allowed values"
        }
      }
    }
  }
}
